extends layout
block content
  form(method="POST" action="/user/login" class="flex flex-col mx-auto my-4 border-2 w-max p-4")
    div(class="flex mb-2")
      label(for="email" class="text-xl mr-12") Email: 
      input(id="email" name="email", type="email", required class="border-solid border-2 border-gray-400 px-2")
    div(class="flex mb-2")
      label(for="password" class="text-xl mr-3") Password: 
      input(id="password" name="password", type="password", required class="border-solid border-2 border-gray-400 px-2")
    button(type="submit" class="text-xl p-2 bg-red-400 rounded-lg mt-2 w-24 self-center") Login
    if errors && errors.length > 0
      each error in errors
        p(class="mt-2 text-red-500") #{error}